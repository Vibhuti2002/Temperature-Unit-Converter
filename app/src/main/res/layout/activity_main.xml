<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D7EBED"
    android:backgroundTint="#DFF7FA"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/input"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:ems="10"
        android:hint="°C"
        android:inputType="textPersonName"
        android:textAlignment="viewEnd"
        android:textColor="#365B60"
        android:textColorHighlight="#0D454C"
        android:textColorHint="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/Dfarh"
        android:layout_width="69dp"
        android:layout_height="41dp"
        android:text="°F"
        android:textColor="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.642" />

    <TextView
        android:id="@+id/kelvin"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:background="#098B9C"
        android:backgroundTint="#565859"
        android:padding="6dp"
        android:shadowRadius="6"
        android:text="Kelvin"
        android:textColor="#DAF3F6"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.769" />

    <TextView
        android:id="@+id/K"
        android:layout_width="63dp"
        android:layout_height="47dp"
        android:text="K"
        android:textColor="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.905"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.777" />

    <TextView
        android:id="@+id/celsius"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="#098B9C"
        android:backgroundTint="#565859"
        android:padding="6dp"
        android:shadowRadius="6"
        android:text="Celsius"
        android:textColor="#DAF3F6"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/Dcelsius"
        android:layout_width="67dp"
        android:layout_height="45dp"
        android:text="°C"
        android:textColor="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.904"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.507" />

    <TextView
        android:id="@+id/farh"
        android:layout_width="132dp"
        android:layout_height="45dp"
        android:background="#098B9C"
        android:backgroundTint="#565859"
        android:padding="6dp"
        android:shadowRadius="6"
        android:text="Fahrenheit"
        android:textColor="#DAF3F6"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <TextView
        android:id="@+id/Fdisplay"
        android:layout_width="154dp"
        android:layout_height="48dp"
        android:onClick="tempCon"
        android:textAlignment="viewEnd"
        android:textColor="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.638"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/Kdisplay"
        android:layout_width="155dp"
        android:layout_height="48dp"
        android:onClick="tempCon"
        android:textAlignment="viewEnd"
        android:textColor="#365B60"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.778"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#565859"
        android:onClick="tempCon"
        android:padding="6dp"
        android:text="Convert"
        android:textColor="#E9F3F4"
        android:textSize="24sp"
        app:cornerRadius="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.921" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="340dp"
        android:layout_height="251dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.033"
        app:srcCompat="@drawable/ghb" />

</androidx.constraintlayout.widget.ConstraintLayout>